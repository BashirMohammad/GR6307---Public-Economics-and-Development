\begin_deeper
\begin_layout Itemize
Add a few assumptions: 
\begin_inset Formula $A=\mathbb{R}$
\end_inset

, 
\begin_inset Formula $C\left(a\right)=ka^{2}/2$
\end_inset

, 
\begin_inset Formula 
\[
\mathbf{v}\equiv\left(\begin{array}{c}
v_{a}\\
v_{y}
\end{array}\right)\sim\mathcal{N}\left(\begin{array}{c}
\bar{v}_{a}\\
\bar{v}_{y}
\end{array},\begin{array}{cc}
\sigma_{a}^{2} & \sigma_{ay}\\
\sigma_{ay} & \sigma_{y}^{2}
\end{array}\right),\quad\bar{v}_{a}\lessgtr0,\;\bar{v}_{y}>0
\]

\end_inset


\end_layout

\begin_layout Itemize
Start with case where 
\begin_inset Formula $\boldsymbol{\mu}$
\end_inset

 is fixed.
 Implies that
\begin_inset Formula 
\[
\bar{r}\left(a,y\right)\equiv\bar{\mu}_{a}\frac{\partial\mathbb{E}\left[v_{a}\vert a,y\right]}{\partial a}-\bar{\mu}_{y}\frac{\partial\mathbb{E}\left[v_{y}\vert a,y\right]}{\partial a}
\]

\end_inset


\end_layout

\begin_layout Itemize
With normal 
\begin_inset Formula $\mathbf{v}$
\end_inset

, the posteriors are
\begin_inset Formula 
\begin{align*}
\mathbb{E}\left[v_{a}\vert a,y\right] & =\bar{v}_{a}+\rho\left(y\right)\left[ka-\bar{v}_{a}-\bar{v}_{y}y-\bar{r}\left(a,y\right)\right]\\
\mathbb{E}\left[v_{y}\vert a,y\right] & =\bar{v}_{y}+\chi\left(y\right)\left[ka-\bar{v}_{a}-\bar{v}_{y}y-\bar{r}\left(a,y\right)\right]
\end{align*}

\end_inset

where 
\begin_inset Formula $\rho\left(y\right)=\frac{\sigma_{a}^{2}+y\sigma_{ay}}{\sigma_{a}^{2}+2y\sigma_{ay}+y^{2}\sigma_{y}^{2}}$
\end_inset

 and 
\begin_inset Formula $y\chi\left(y\right)\equiv1-\rho\left(y\right)$
\end_inset


\end_layout

\begin_layout Itemize
Equilibrium solves these two differential equations.
\end_layout

\end_deeper
