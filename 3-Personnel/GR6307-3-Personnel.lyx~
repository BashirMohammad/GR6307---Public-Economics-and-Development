\begin_layout Itemize
participation: Agent prefers this to outside option 
\begin_inset Formula 
\[
u_{ij}^{a}=e_{ij}\left(b_{ij}+\theta_{ij}\right)+w_{ij}-\frac{1}{2}e_{ij}^{2}\geq\bar{u}_{j}
\]

\end_inset


\end_layout

\begin_layout Itemize
